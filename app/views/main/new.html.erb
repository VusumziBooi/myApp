<div class="d-flex align-items-center justify-content-center">
    <h1>Welcome page</h1>
</div>

<%= form_with model: @user , url:users_path do |form|%>
    <div class="mb-3">
        <%= form.label :email %>
        <br>
        <%= form.text_field :email , class: "form_control" %>
    </div>

    <div class="mb-3">
        <%= form.label :user_type %>
        <br>
        <%= form.text_field :user_type , class:"form_control" %>
    </div>

    <div class="mb-3">
        <%= form.label :password%>
        <br>
        <%= form.password_field :password , class:"form_control"%>
    </div>

    <div class="mb-3">
        <%= form.label :password_confirmation%>
        <br>
        <%= form.password_field :password_confirmation , class:"form_control"%>
    </div>

    <div class="mb-3">
        <%= form.submit%>
    </div>

<%end %>

<h2>Update existing user</h2>
<%= form_for @user, :method => :put do |form|%>
    <div class="mb-3">
        <%= form.label :email %>
        <br>
        <%= form.text_field :email , class: "form_control" %>
    </div>

    <div class="mb-3">
            <%= form.label :user_type %>
            <br>
            <%= form.text_field :user_type , class:"form_control" %>
        </div>
    
    <div class="mb-3">
        <%= form.submit "Update User" , class: "btn btn-primary"%>
    </div>
    <%end %>

    <h2>Remove existing user</h2>
    <%= form_for @user, :method => :delete do |form|%>
        <div class="mb-3">
        <%= form.label :email %>
        <br>
        <%= form.text_field :email , class: "form_control" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Delete User" , class: "btn btn-secondary"%>
    </div>

    <%end %>
